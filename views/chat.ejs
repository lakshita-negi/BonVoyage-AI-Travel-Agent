<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>BonVoyage AI</title>
<style>
    *{margin:0;padding:0;box-sizing:border-box;font-family:"Inter",sans-serif;}
    body{
        background: linear-gradient(to bottom right, #edf4ff, #dce9ff);
        height:100vh;
        display:flex;
        justify-content:center;
        align-items:flex-start;
        padding-top:20px;
    }
    .app-shell{
        display:flex;
        width:90%;
        max-width:1000px;
        height:90vh;
        border-radius:25px;
        overflow:hidden;
        box-shadow:0 15px 40px rgba(0,0,0,0.08);
        background:#f7faff;
    }
    .sidebar{
        width:220px;
        background: linear-gradient(to bottom, #fff, #f0f6ff);
        padding:20px;
        display:flex;
        flex-direction:column;
        gap:12px;
        border-right:1px solid #e6f0ff;
    }
    .sidebar button{
        padding:10px;
        border:none;
        border-radius:12px;
        cursor:pointer;
        font-weight:600;
        color:#1a3c70;
        background:#e6f0ff;
        transition:0.3s;
    }
    .sidebar a button {
    width: 100%;
    }
    .sidebar button:hover{
        background:#d0e0ff;
    }
    .sidebar h2{
        font-size:18px;
        color:#1a3c70;
        margin-bottom:10px;
    }
    .session-list{
        flex:1;
        overflow-y:auto;
        display:flex;
        flex-direction:column;
        gap:6px;
    }
    .session-item{
        padding:8px 10px;
        border-radius:10px;
        background:#f0f6ff;
        cursor:pointer;
        font-size:14px;
    }
    .session-item.active{
        background:#a8c6ff;
        color:#0d1f4a;
    }
    .chat-container{
        flex:1;
        display:flex;
        flex-direction:column;
        position:relative;
    }
    .hero{
        text-align:center;
        padding:40px 20px 20px 20px;
        animation: fadeIn 1.4s ease;
    }
    .hero img{
        width:220px;
        height:auto;
        margin-bottom:20px;
        animation: fadeIn 1.2s ease;
        border-radius:15px;
    }
    .hero h1{
        font-size:36px;
        font-weight:700;
        color:#1a3c70;
        animation: fadeInUp 1.4s ease;
    }
    .typing-text{
        margin-top:10px;
        font-size:18px;
        color:#3b5a8f;
        min-height:24px;
        animation: fadeInUp 1.6s ease;
    }
    .chat-wrapper{
        flex:1;
        overflow-y:auto;
        padding:20px;
        display:flex;
        flex-direction:column;
        gap:10px;
        margin-bottom:80px;
    }
    .bubble{
        display:inline-block;
        max-width:80%;
        padding:12px 18px;
        border-radius:20px;
        font-size:16px;
        line-height:1.4;
        word-wrap:break-word;
    }
    .ai{
        background:#e3edff;
        color:#1a3c70;
        align-self:flex-start;
        border-top-left-radius:5px;
    }
    .user{
        background:#a8c6ff;
        color:#0d1f4a;
        align-self:flex-end;
        border-top-right-radius:5px;
    }
    .typing-indicator{
        width:45px;
        background:white;
        padding:10px 14px;
        border-radius:18px;
        display:flex;
        gap:4px;
        margin-left:5px;
        margin-top:10px;
        display:none;
    }
    .typing-indicator span{
        width:8px;
        height:8px;
        background:#8fa7d9;
        border-radius:50%;
        animation: blink 1.4s infinite ease-in-out;
    }
    .typing-indicator span:nth-child(2){ animation-delay:0.2s; }
    .typing-indicator span:nth-child(3){ animation-delay:0.4s; }
    .chat-bar{
        position:absolute;
        bottom:20px;
        left:50%;
        transform:translateX(-50%);
        width:90%;
        max-width:650px;
        padding:10px 0;
        background:transparent;
    }
    .input-box{
        background:#e6f0ff;
        padding:12px 20px;
        border-radius:40px;
        display:flex;
        align-items:center;
        gap:10px;
        border:1px solid #d1def7;
        box-shadow:0px 5px 15px rgba(0,0,0,0.08);
    }
    .input-box input{
        width:100%;
        border:none;
        outline:none;
        font-size:16px;
        background:transparent;
        padding:6px 0;
    }
    .icon{
        width:22px;
        cursor:pointer;
        opacity:0.7;
        filter: brightness(0.6);
    }
    @keyframes fadeIn{from{opacity:0;}to{opacity:1;}}
    @keyframes fadeInUp{from{opacity:0; transform:translateY(15px);}to{opacity:1; transform:translateY(0);} }
    @keyframes blink{0%{opacity:0.2;}50%{opacity:1;}100%{opacity:0.2;}}
</style>
</head>
<body>

<div class="app-shell">

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2>BonVoyage</h2>
        <button onclick="startNewChat()">+ New Chat</button>
        <a href="/"><button>Home</button></a> 
        <button onclick="showExplore()">Explore</button>
        <button onclick="clearAllHistory()">Clear History</button>

        <h2>Chat History</h2>
        <div class="session-list" id="sessionList"></div>
    </div>

    <!-- CHAT AREA -->
    <div class="chat-container">

        <!-- HERO -->
        <div class="hero">
            <img src="/images/demo.png">
            <h1>Where to today?</h1>
            <div class="typing-text" id="typing"></div>
        </div>

        <!-- CHAT -->
        <div class="chat-wrapper" id="chat"></div>

        <!-- TYPING DOTS -->
        <div class="typing-indicator" id="typingIndicator">
            <span></span><span></span><span></span>
        </div>

        <!-- INPUT BAR -->
        <div class="chat-bar">
            <div class="input-box">
                <input id="userInput" type="text" />
                <img src="https://cdn-icons-png.flaticon.com/512/724/724954.png" class="icon" onclick="sendMessage()">
            </div>
        </div>

    </div>

</div>

<script>
let text = "Hey there, Iâ€™m here to assist you in planning your experience.";
let i = 0;
function typeEffect(){
    if(i < text.length){
        document.getElementById("typing").innerHTML += text.charAt(i);
        i++;
        setTimeout(typeEffect, 40);
    }
}

let sessionId = Date.now();
let allSessions = JSON.parse(localStorage.getItem("bonvoyage_sessions") || "{}");
allSessions[sessionId] = allSessions[sessionId] || [];

const defaultPrompt = "I want to travel Paris from India with my friend for 1 week in next 2 days.";

// Replace with your actual n8n webhook URL
const WEBHOOK_URL = "https://lakshitaa.app.n8n.cloud/webhook-test/planner";

async function sendMessage() {
    let input = document.getElementById("userInput");
    if(input.value.trim()==="") return;
    let chat = document.getElementById("chat");

    // Add user message to chat
    chat.innerHTML += `<div class="bubble user">${input.value}</div>`;
    chat.scrollTop = chat.scrollHeight;

    let userMsg = input.value;
    input.value = "";

    allSessions[sessionId].push({sender:'user', text:userMsg});
    saveSessions();
    renderChatHistory();

    let typing = document.getElementById("typingIndicator");
    typing.style.display = "flex";

    try {
        // Send message to n8n webhook
        const response = await fetch(WEBHOOK_URL, {
            method: "POST",
            headers: {"Content-Type": "application/json"},
            body: JSON.stringify({
                chatInput: userMsg,  // <-- n8n expects 'chatInput'
                sessionId: sessionId
            })
        });

        const data = await response.json();
        const aiResponse = data.reply || "Check Your Email for the Itinerary Plan!";

        typing.style.display = "none";
        chat.innerHTML += `<div class="bubble ai">${aiResponse}</div>`;
        chat.scrollTop = chat.scrollHeight;

        allSessions[sessionId].push({sender:'ai', text:aiResponse});
        saveSessions();
        renderChatHistory();

    } catch(err) {
        typing.style.display = "none";
        chat.innerHTML += `<div class="bubble ai">Error connecting to server.</div>`;
        chat.scrollTop = chat.scrollHeight;
        console.error(err);
    }
}

document.getElementById("userInput").addEventListener("keydown", function(event){
    if(event.key==="Enter"){ event.preventDefault(); sendMessage(); }
});

function saveSessions(){ localStorage.setItem("bonvoyage_sessions", JSON.stringify(allSessions)); }
function loadSessions(){ renderChatHistory(); }
function renderChatHistory(){
    const list = document.getElementById("sessionList");
    list.innerHTML = "";
    for(const id in allSessions){
        const item = document.createElement("div");
        item.className = "session-item"+(id==sessionId ? " active":"");
        item.textContent = allSessions[id][0]?.text?.slice(0,30) || "New Chat";
        item.onclick = ()=>{
            sessionId = id;
            document.getElementById("chat").innerHTML = "";
            allSessions[sessionId].forEach(msg=>{
                document.getElementById("chat").innerHTML += `<div class="bubble ${msg.sender}">${msg.text}</div>`;
            });
            renderChatHistory();
            document.getElementById("userInput").value = "";
        };
        list.appendChild(item);
    }
}

function startNewChat(){
    sessionId = Date.now();
    allSessions[sessionId] = [];
    document.getElementById("chat").innerHTML = "";
    document.getElementById("userInput").value = defaultPrompt;
    renderChatHistory();
}

function clearAllHistory(){
    if(confirm("Are you sure you want to clear all chat history?")){
        allSessions = {};
        sessionId = Date.now();
        document.getElementById("chat").innerHTML = "";
        document.getElementById("sessionList").innerHTML = "";
        document.getElementById("userInput").value = defaultPrompt;
        saveSessions();
    }
}

function showHome(){ alert("Home screen coming soon!"); }
function showExplore(){ alert("Explore screen coming soon!"); }

window.onload = ()=>{
    typeEffect();
    document.getElementById("userInput").value = defaultPrompt;
    loadSessions();
};
</script>

</body>
</html>
