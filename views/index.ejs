    <script>
        function openSidebar() {
            document.getElementById("sidebar").classList.add("open");
            document.getElementById("overlay").classList.add("show");
        }

        function closeSidebar() {
            document.getElementById("sidebar").classList.remove("open");
            document.getElementById("overlay").classList.remove("show");
        }

        let featureIndex = 0;
        const slides = document.querySelectorAll(".feature-slide");
        const dots = document.querySelectorAll(".feature-dot");

        function moveToSlide(index) {
            featureIndex = index;
            document.querySelector(".feature-slider").style.transform =
                `translateX(-${index * 100}%)`;

            dots.forEach(dot => dot.classList.remove("active"));
            dots[index].classList.add("active");
        }

        function autoSlide() {
            featureIndex = (featureIndex + 1) % slides.length;
            moveToSlide(featureIndex);
        }

        setInterval(autoSlide, 3000); // 2 seconds
    </script>

